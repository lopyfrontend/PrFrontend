extends common/layout
block content
  // Page Content
  .container
    // Page Heading/Breadcrumbs
    h1.mt-4.mb-3
      | 联系我们
      small xxxxxx
    ol.breadcrumb
      li.breadcrumb-item
        a(href='index.html') 首页
      li.breadcrumb-item.active 联系我们
    // Content Row
    .row
      // Map Column
      .col-lg-8.mb-4
        // Embedded Google Map
        iframe(width='100%', height='400px', frameborder='0', scrolling='no', marginheight='0', marginwidth='0', src='http://maps.google.com/maps?hl=en&ie=UTF8&ll=37.0625,-95.677068&spn=56.506174,79.013672&t=m&z=4&output=embed')
      // Contact Details Column
      .col-lg-4.mb-4
        h3 详情
        p
          | 重庆市渝中区
          br
          | 人民路248号22楼
          br
        p
          abbr(title='Phone') 电话
          | : (023) 63605315
        p
          abbr(title='Email') 邮箱
          | :
          a(href='mailto:xx@xx.com')
            | xxx@xx.com
        p
          abbr(title='Hours') 工作时间
          | : 周一 - 周五: 09:00  to 18:00
    // /.row
    // Contact Form
    // In order to set the email address and subject line for the contact form go to the bin/contact_me.php file.
    .row
      .col-lg-8.mb-4
        h3 留言
        form#contactForm(name='sentMessage', novalidate='')
          .control-group.form-group
            .controls
              label 姓名:
              input#name.form-control(type='text', required='', data-validation-required-message='请输入你的姓名')
              p.help-block
          .control-group.form-group
            .controls
              label 手机号:
              input#phone.form-control(type='tel', required='', data-validation-required-message='请输入你的手机号')
          .control-group.form-group
            .controls
              label 邮箱:
              input#email.form-control(type='email', required='', data-validation-required-message='请输入你的邮箱')
          .control-group.form-group
            .controls
              label 内容:
              textarea#message.form-control(rows='10', cols='100', required='', data-validation-required-message='输入留言的内容', maxlength='999', style='resize:none')
          #success
          // For success/fail messages
          button#sendMessageButton.btn.btn-primary(type='submit') 点击留言
    // /.row
  // /.container
